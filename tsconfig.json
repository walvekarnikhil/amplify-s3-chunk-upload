{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "lib": [
			"dom",
			"es2017",
			"esnext.asynciterable",
			"es2019",
			"es2020.promise"
		],
		"moduleResolution": "node",
		"noEmitOnError": true,
		"incremental": true,
		"importHelpers": true,
    "esModuleInterop": true,
		"noImplicitAny": false,
    "types": ["node", "jest"]
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": ["node_modules", "tmp", "**/*.d.ts"],
  "downlevelIteration": true,
}